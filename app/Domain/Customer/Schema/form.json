{
  "settings": {
    "max_width": "4xl"
  },
  "form": {
    "primary": {
      "label": "Primary Information",
      "fields": [
        {
          "key": "first_name",
          "required": true
        },
        {
          "key": "last_name",
          "required": true
        },
        {
          "key": "email",
          "required": false
        },
        {
          "key": "phone",
          "required": false
        },
        {
          "key": "mobile",
          "required": false
        },
        {
          "key": "inactive",
          "required": false
        }
      ]
    },
    "company_info": {
      "label": "Company Information",
      "fields": [
        {
          "key": "company",
          "required": false
        },
        {
          "key": "position",
          "required": false
        },
        {
          "key": "title",
          "required": false
        }
      ]
    },
    "lead_details": {
      "label": "Lead Details",
      "fields": [
        {
          "key": "budget_min",
          "required": false
        },
        {
          "key": "budget_max",
          "required": false
        },
        {
          "key": "purchase_timeline",
          "required": false
        },
        {
          "key": "has_trade_in",
          "required": false
        },
        {
          "key": "trade_in_value",
          "required": false
        },
        {
          "key": "preferred_contact_method",
          "required": false
        }
      ]
    },
    "address": {
      "label": "Address",
      "is_address": true,
      "fields": [
        {
          "key": "address_line_1",
          "required": false,
          "tag": "street"
        },
        {
          "key": "address_line_2",
          "required": false,
          "tag": "unit"
        },
        {
          "key": "city",
          "required": false,
          "tag": "city"
        },
        {
          "key": "state",
          "required": false,
          "tag": "state"
        },
        {
          "key": "postal_code",
          "required": false,
          "tag": "postal_code"
        },
        {
          "key": "country",
          "required": false,
          "tag": "country"
        },
        {
          "key": "latitude",
          "hidden": true,
          "tag": "latitude"
        },
        {
          "key": "longitude",
          "hidden": true,
          "tag": "longitude"
        }
      ]
    },
    "notes": {
      "label": "Notes",
      "fields": [
        {
          "key": "notes",
          "required": false
        }
      ]
    },
    "management": {
      "label": "Management",
      "fields": [
        {
          "key": "status_id",
          "required": true
        },
        {
          "key": "source_id",
          "required": false
        },
        {
          "key": "priority_id",
          "required": false
        },
        {
          "key": "assigned_user_id",
          "required": false
        },
        {
          "key": "last_contacted_at",
          "required": false
        },
        {
          "key": "next_followup_at",
          "required": false
        }
      ]
    }
  }
}