{
  "settings": {
    "max_width": "4xl"
  },
  "form": {
    "primary": {
      "label": "Primary Information",
      "fields": [
        { "key": "inventory_item_id", "required": true },
        { "key": "serial_number", "required": false },
        { "key": "hin", "required": false },
        { "key": "sku", "required": false },
        { "key": "batch_number", "required": false },
        { "key": "quantity", "required": true },
        { "key": "inactive", "required": false }
      ]
    },
    "secondary": {
      "label": "Details",
      "fields": [        
        { "key": "condition", "required": true },
        { "key": "status", "required": true },
        { "key": "engine_hours", "required": false, "conditional": { "key": "InventoryItem.type", "value": 1} },
        { "key": "cost", "required": false },
        { "key": "asking_price", "required": false },
        { "key": "price_history", "required": false, "hidden": true }
      ]
    },
    "vendor_info": {
      "label": "Vendor / Owner",
      "fields": [
        { "key": "vendor_id", "required": false },
        { "key": "owner_name", "required": false }
      ]
    },
    "location_info": {
      "label": "Location",
      "fields": [
        { "key": "location_id", "required": false }
      ]
    },
    "notes": {
      "label": "Notes",
      "fields": [
        { "key": "notes", "required": false }
      ]
    }
  },
  "sublistConditions": {
    "auto_fill": {
      "cost": "InventoryItem.default_cost",
      "asking_price": "InventoryItem.default_price"
    }
  }
}
