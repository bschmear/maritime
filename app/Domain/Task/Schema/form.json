{
  "settings": {
    "max_width": "4xl"
  },
  "form": {
    "task_details": {
      "label": "Task Details",
      "fields": [
        {
          "key": "display_name",
          "required": true
        },
        {
          "key": "relatable_type",
          "required": false
        },
        {
          "key": "notes",
          "required": false
        },
        {
          "key": "start_date",
          "required": true
        },
        {
          "key": "due_date",
          "required": false
        },
        {
          "key": "has_due_time",
          "required": false
        },
        {
          "key": "due_time",
          "required": false,
          "conditional": {
            "key": "has_due_time",
            "value": true
          }
        }
      ]
    },
    "management": {
      "label": "Management & Assignment",
      "fields": [
        {
          "key": "status_id",
          "required": true
        },
        {
          "key": "priority_id",
          "required": true
        },
        {
          "key": "assigned_id",
          "required": false
        },
        {
          "key": "created_by",
          "required": false,
          "disabled": true,
          "update_only": true
        },
        {
          "key": "updated_by",
          "required": false,
          "disabled": true,
          "update_only": true
        },
        {
          "key": "created_at",
          "required": false,
          "disabled": true,
          "update_only": true
        },
        {
          "key": "updated_at",
          "required": false,
          "disabled": true,
          "update_only": true
        }
      ]
    }
  }
}