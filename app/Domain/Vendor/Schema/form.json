    "address": {
      "label": "Location",
      "is_address": true,
      "fields": [
        {
          "key": "address_line_1",
          "required": false,
          "tag": "street"
        },
        {
          "key": "address_line_2",
          "required": false,
          "tag": "unit"
        },
        {
          "key": "city",
          "required": false,
          "tag": "city"
        },
        {
          "key": "state",
          "required": false,
          "tag": "state"
        },
        {
          "key": "postal_code",
          "required": false,
          "tag": "postal_code"
        },
        {
          "key": "country",
          "required": false,
          "tag": "country"
        },
        {
          "key": "latitude",
          "hidden": true,
          "tag": "latitude"
        },
        {
          "key": "longitude",
          "hidden": true,
          "tag": "longitude"
        }
      ]
    },
    "contracts": {
      "label": "Contract Details",
      "fields": [
        {
          "key": "contract_start",
          "required": false
        },
        {
          "key": "contract_end",
