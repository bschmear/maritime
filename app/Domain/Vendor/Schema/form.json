        {
          "key": "contact_last_name",
          "required": false
        },
        {
          "key": "contact_email",
          "required": false
        },
        {
          "key": "contact_phone",
          "required": false
        },
        {
          "key": "secondary_email",
          "required": false
        },
        {
          "key": "secondary_phone",
          "required": false
        },
        {
          "key": "preferred_contact_method",
          "required": false
        },
        {
          "key": "contacts",
          "required": false
        },
        {
          "key": "assigned_user_id",
          "required": false
        },
        {
          "key": "notes",
          "required": false
        }
      ]
