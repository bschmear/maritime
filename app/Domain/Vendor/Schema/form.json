        {
          "key": "payment_terms",
          "required": false
        },
        {
          "key": "credit_limit",
          "required": false
        },
        {
          "key": "website",
          "required": false
        },
        {
          "key": "linkedin",
          "required": false
        },
        {
          "key": "facebook",
          "required": false
        },
        {
          "key": "is_verified",
          "required": false
        },
        {
          "key": "verified_at",
          "required": false,
